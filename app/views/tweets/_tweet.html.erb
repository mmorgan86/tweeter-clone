<div class="well">
  <p>@<%= link_to tweet.user.username,  show_user_path(id: tweet.user_id) %></p>
  <p>
    <% if tweet.created_at > 1.day.ago %>
      <%= time_ago_in_words tweet.created_at %> ago
    <% else %>
      <%= tweet.created_at.strftime('%b %e') %>
    <% end %>  
  </p>
  <p><%= tweet.message.html_safe %></p>
</div>